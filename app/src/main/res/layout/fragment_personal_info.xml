<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white"
    tools:context=".PersonalInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Heading -->
            <TextView
                android:id="@+id/tvAccountInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginBottom="16dp" />

            <!-- Profile Image with edit icon -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/ivEditProfile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    android:layout_alignBottom="@id/imgProfile"
                    android:layout_alignEnd="@id/imgProfile"
                    android:background="@drawable/bg_edit_circle"
                    android:padding="6dp"
                    android:backgroundTint="@android:color/white" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/bg_round_gray"
                android:elevation="4dp">

                <!-- Edit Icon (Top Right) -->
                <ImageView
                    android:id="@+id/ivEditInfo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    android:backgroundTint="#BF55F321"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="4dp"
                    android:background="@drawable/bg_edit_circle" />

                <!-- Info Content -->
                <LinearLayout
                    android:id="@+id/containerInfo"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivEditInfo"
                    android:layout_marginTop="10dp">

                    <!-- Full Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Full Name"
                            android:textColor="#666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ali Raza"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Email"
                            android:textColor="#666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="aliraza12@gmail.com"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- DOB -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Date of Birth"
                            android:textColor="#666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDOB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21-Dec-2001"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phone"
                            android:textColor="#666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+923012345678"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
