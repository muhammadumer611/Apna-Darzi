<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg"
    android:padding="20dp"
    tools:context=".ActivitySignUpScreen">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/machine_pic"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <!-- Username -->
    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Username"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="#A9A9A9"
        android:textSize="14sp"/>

    <!-- Email -->
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtUsername"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#A9A9A9"
        android:textSize="14sp"/>

    <!-- Create Password -->
    <EditText
        android:id="@+id/edtCreatePassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtEmail"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Create Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#A9A9A9"
        android:textSize="14sp"/>

    <!-- Confirm Password -->
    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtCreatePassword"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#A9A9A9"
        android:textSize="14sp"/>

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"/>

    <!-- Login section -->
    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#000"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvLoginClickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Log In"
            android:textColor="#2463FF"
            android:textStyle="bold"
            android:textSize="13sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- OR Divider -->
    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="--------------------- Or  ---------------------"
        android:textColor="#070707"
        android:textSize="14sp"/>

    <!-- Google Sign Up -->
    <RelativeLayout
        android:id="@+id/btnGoogle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/tvOr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/googlebtn_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/googleIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/google_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/googleIcon"
            android:layout_centerVertical="true"
            android:text="Sign Up with Google"
            android:textColor="#000"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/termsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:id="@+id/cbTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:buttonTint="#000"
            android:scaleX="0.8"
            android:scaleY="0.8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cbTerms"
            android:layout_centerVertical="true"
            android:layout_marginStart="-5dp"
            android:text="I Agree to all terms and conditions"
            android:textColor="#000"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>